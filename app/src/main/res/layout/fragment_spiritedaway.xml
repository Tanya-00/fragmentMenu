<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spirited"
    tools:context=".Spiritedaway">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Унесенные призраками"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Картина, которая выиграла премию 'Оскар' в номинации 'лучший анимационный полнометражный
        фильм'. Работа выпущена студией Ghibli в 2001 году"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/chihiro" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="8dp"
        android:text="Тихиро - девочка, родители которой превратились в свиней, и чтобы их вернуть ей предстоит поработать"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="150dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/haku" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="187dp"
        android:text="Хаку - ученик Юбабы. Может превращаться в дракона по собственному желанию"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ub" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="8dp"
        android:text="Юбаба - владелица бань и волшебница, которая превратила родителей Тихиро в свиней"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

</FrameLayout>